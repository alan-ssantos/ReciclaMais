            android:layout_marginStart="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:text="Data"/>

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lstRegistros"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
