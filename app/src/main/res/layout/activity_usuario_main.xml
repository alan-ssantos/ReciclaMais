<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/main_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/txtUsuarioNome"
        android:text="@string/bem_vindo"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txtUsuarioMsg"
        android:text="@string/coleta_do_dia"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <RelativeLayout
        android:paddingVertical="20dp"
        android:elevation="2dp"
        android:background="@drawable/main_box_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="74dp"
            android:layout_height="82dp"
            android:layout_marginLeft="60dp"
            android:src="@drawable/icone_ponto">
        </ImageView>

        <TextView
            android:id="@+id/txtUsuarioPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imgIcon"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="73dp"
            android:layout_marginTop="5dp"
            android:text="@string/pts"
            android:textColor="#19b08f"
            android:textSize="50sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:paddingVertical="20dp"
        android:elevation="2dp"
        android:background="@drawable/main_button_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgIconTroca"
            android:layout_alignStart="@+id/txtTrocaPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icone_troca">
        </ImageView>

        <TextView
            android:id="@+id/txtTrocaPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trocar_pontos"
            android:layout_marginStart="90dp"
            android:paddingStart="60dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/txtUsuarioColeta"
        android:text="@string/hist_rico_recente"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TableRow
            android:background="@drawable/main_box_style"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="Data da coleta"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pontuação"/>
        </TableRow>

        <TableRow android:paddingLeft="8dp">

            <TextView
                android:layout_width="79dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="23/03/2019" />
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20"/>
        </TableRow>

        <TableRow android:paddingLeft="8dp"
            android:background="#F3F2F2">
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20/03/2019" />
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20"/>
        </TableRow>

        <TableRow android:paddingLeft="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="8dp"
                android:text="18/03/2019" />
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20"/>
        </TableRow>

        <TableRow android:paddingLeft="8dp"
            android:background="#F3F2F2">
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23/03/2019" />
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20"/>
        </TableRow>

        <TableRow android:paddingLeft="8dp">
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="23/03/2019" />
            <TextView
                android:padding="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+20"/>
        </TableRow>
    </TableLayout>

</LinearLayout>