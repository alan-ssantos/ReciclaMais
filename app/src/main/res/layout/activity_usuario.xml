<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/main_background_color"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="24dp">

    <TextView
        android:id="@+id/txtUsuarioNome"
        android:text="@string/bem_vindo"
        style="@style/TitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TextView
        android:id="@+id/txtUsuarioMsg"
        android:text="@string/coleta_do_dia"
        style="@style/SubtitleStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    </LinearLayout>

    <RelativeLayout
        android:paddingVertical="20dp"
        style="@style/BoxStyle"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgIcon"
            android:layout_width="74dp"
            android:layout_height="82dp"
            android:src="@drawable/icone_ponto">
        </ImageView>

        <TextView
            android:id="@+id/txtUsuarioPontuacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/imgIcon"
            android:layout_alignParentTop="true"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5dp"
            android:text="@string/pts"
            android:textColor="#19b08f"
            android:textSize="50sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:paddingVertical="20dp"
        style="@style/ButtonStyle"
        android:gravity="center"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/imgIconTroca"
            android:layout_alignStart="@+id/txtTrocaPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icone_troca">
        </ImageView>

        <TextView
            android:id="@+id/txtTrocaPonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trocar_pontos"
            android:paddingStart="60dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <Button
        style="@style/InputStyle"
        android:layout_marginTop="16dp"
        android:textColor="#19b08f"
        android:text="@string/editar"
        android:onClick="abrirEditarUsuario"/>

    <TextView
        android:id="@+id/txtUsuarioColeta"
        android:text="@string/hist_rico_recente"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TableRow
            android:background="@drawable/main_box_style"
            android:paddingLeft="8dp">

            <TextView
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="6dp"
                android:text="Data da coleta"
                android:textSize="16sp"
                android:textStyle="bold" />
            <TextView
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pontuação"/>
        </TableRow>

    </TableLayout>

</LinearLayout>